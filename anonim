import asyncio
import random
from telethon import events

from .. import loader, utils


@loader.tds
class ComplimentModule(loader.Module):
    """–ú–æ–¥—É–ª—å –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç–æ–≤"""

    strings = {"name": "Compliment"}

    def __init__(self):
        self.running = False

    @loader.unrestricted
    async def voncmd(self, message: types.Message):
        """–ó–∞–ø—É—Å–∫–∞–µ—Ç –æ—Ç–ø—Ä–∞–≤–∫—É –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç–æ–≤ –∫–∞–∂–¥—É—é —Å–µ–∫—É–Ω–¥—É"""
        if self.running:
            await utils.answer(message, "‚ùåÔ∏è–£–∂–µ –∑–∞–ø—É—â–µ–Ω–æ!")
            return
        self.running = True

        await utils.answer(message, "<b>‚úÖ –û—Ç–ø—Ä–∞–≤–∫–∞ –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç–æ–≤ –∑–∞–ø—É—â–µ–Ω–∞!</b>")

        while self.running:
            compliments = [
                "–í–∏–∫–∞, —Ç—ã –æ—á–∞—Ä–æ–≤–∞—Ç–µ–ª—å–Ω–∞—è –∏ —É–º–Ω–∞—è! üíñ",
                "–í–∏–∫–∞, —É —Ç–µ–±—è –ø—Ä–µ–∫—Ä–∞—Å–Ω–æ–µ —á—É–≤—Å—Ç–≤–æ —é–º–æ—Ä–∞! üòÑ",
                "–¢—ã —Ç–∞–∫–∞—è —Ç–∞–ª–∞–Ω—Ç–ª–∏–≤–∞—è, –í–∏–∫–∞! üí´",
                "–í–∏–∫–∞, —Ç—ã –≤—Å–µ–≥–¥–∞ –ø–æ–¥–Ω–∏–º–∞–µ—à—å –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∏–µ! üåû",
                "–¢—ã —Ç–∞–∫–∞—è –¥–æ–±—Ä–∞—è –∏ –æ—Ç–∑—ã–≤—á–∏–≤–∞—è, –í–∏–∫–∞! üå∏",
                "–í–∏–∫–∞, —É —Ç–µ–±—è –ø—Ä–µ–∫—Ä–∞—Å–Ω—ã–π –≤–∫—É—Å! üëå",
                "–¢—ã —Ç–∞–∫–∞—è –∫—Ä–µ–∞—Ç–∏–≤–Ω–∞—è –∏ –≤–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∞—è, –í–∏–∫–∞! üé®",
                "–¢–≤–æ—è —É–ª—ã–±–∫–∞ –≤—Å–µ–≥–¥–∞ –¥–µ–ª–∞–µ—Ç –º–∏—Ä –ª—É—á—à–µ, –í–∏–∫–∞! üòä",
                "–í–∏–∫–∞, —Ç—ã –ø—Ä–æ—Å—Ç–æ –ø—Ä–µ–∫—Ä–∞—Å–Ω–∞! ‚ú®"
            ]
            
            for _ in range(20):
                compliment = random.choice(compliments)
                await message.client.send_message("–í–∏–∫–∞", f"<b>{compliment}</b>", parse_mode='html')
                await asyncio.sleep(1)

    @loader.unrestricted
    async def stopvoncmd(self, message: types.Message):
        """–û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç –æ—Ç–ø—Ä–∞–≤–∫—É –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç–æ–≤"""
        if not self.running:
            await utils.answer(message, "‚ùåÔ∏è–û—Ç–ø—Ä–∞–≤–∫–∞ —É–∂–µ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞.")
            return
        self.running = False
        await utils.answer(message, "‚úîÔ∏è–û—Ç–ø—Ä–∞–≤–∫–∞ –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç–æ–≤ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞.")
